<div class="border-b border-gray-200 pb-4 mb-6 sm:flex sm:items-center sm:justify-between">
    <h1 class="text-2xl font-semibold leading-6 text-gray-900">
        {{ title }}
    </h1>
    <div class="mt-3 sm:ml-4 sm:mt-0 flex">
        {% for button in buttons %}
            <a href="{{ button.url }}" class="inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary mr-2">
                {% if button.icon is defined and button.icon %}
                    <iconify-icon icon="{{ button.icon }}" class="relative text-xl mr-2"></iconify-icon>
                {% endif %}
                {{ button.button_text|default('Create') }}
            </a>
        {% endfor %}
    </div>
</div>
